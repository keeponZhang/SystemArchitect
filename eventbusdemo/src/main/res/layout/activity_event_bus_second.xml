<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

	<Button
		android:id="@+id/sendMessageBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="发送消息"
		/>

	<Button
		android:id="@+id/sendStickyMessageBtn1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="sendStickyMessageBtn1"
		/>

	<Button
		android:id="@+id/sendStickyMessageBtn2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="sendStickyMessageBtn2"
		/>

	<Button
		android:id="@+id/sendStickyMessageBtn3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="sendStickyMessageBtn3"
		/>

	<Button
		android:id="@+id/sendRegisterBtn"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="sendRegisterBtn"
		/>
</LinearLayout>