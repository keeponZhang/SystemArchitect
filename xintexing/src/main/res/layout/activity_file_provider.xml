<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".FileProviderActivity">
	<Button
		android:textAllCaps="false"
		android:id="@+id/btn4"
		android:onClick="installApk"
		android:text="installApk"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		/>
	<Button
		android:textAllCaps="false"
		android:id="@+id/btn3"
		android:onClick="checkSelfPermission"
		android:text="checkSelfPermission"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		app:layout_constraintTop_toBottomOf="@id/btn4"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		/>
	<Button
		android:textAllCaps="false"
		android:id="@+id/btn2"
		android:onClick="takePhotoNoCompress2"
		android:text="takePhotoNoCompress2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		app:layout_constraintTop_toBottomOf="@id/btn3"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		/>
	<Button
		android:textAllCaps="false"
		android:id="@+id/btn"
		android:onClick="takePhotoNoCompress"
		android:text="takePhotoNoCompress"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		app:layout_constraintTop_toBottomOf="@id/btn2"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
	/>
	<ImageView
		app:layout_constraintRight_toRightOf="@id/btn"
		app:layout_constraintLeft_toLeftOf="@id/btn"
		app:layout_constraintTop_toBottomOf="@id/btn"
		android:layout_marginTop="20dp"
		android:id="@+id/iv"
		android:layout_width="150dp"
		android:layout_height="150dp"/>

</android.support.constraint.ConstraintLayout>